# 生产环境配置模板
# 复制此文件为 .env.production 并填入真实值

# Database (生产数据库)
DATABASE_URL="postgresql://username:password@host:5432/kidparty_prod"

# JWT Secret (生成新的安全密钥)
JWT_SECRET="your_production_jwt_secret_here_very_long_and_random"

# Email Configuration (生产邮件配置)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_production_email@gmail.com" 
SMTP_PASS="your_production_app_password"
SMTP_FROM="Kid Party RSVP <your_production_email@gmail.com>"

# Base URL (生产域名)
NEXT_PUBLIC_BASE_URL="https://yourdomain.com"

# NextAuth (生产认证配置)
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="your_production_nextauth_secret_here"

# Google OAuth (生产OAuth应用)
GOOGLE_CLIENT_ID="your_production_google_client_id"
GOOGLE_CLIENT_SECRET="your_production_google_client_secret"

# Hyperswitch Payment Configuration (生产支付配置)
NEXT_PUBLIC_HYPERSWITCH_PUBLISHABLE_KEY="pk_prd_your_production_publishable_key"
NEXT_PUBLIC_HYPERSWITCH_CLIENT_URL="https://checkout.hyperswitch.io"
HYPERSWITCH_SECRET_KEY="sk_prd_your_production_secret_key"
HYPERSWITCH_SERVER_URL="https://api.hyperswitch.io"

# Webhook Configuration
HYPERSWITCH_WEBHOOK_SECRET="whsec_your_production_webhook_secret"

# Apple Pay Configuration
APPLE_PAY_MERCHANT_ID="merchant.com.yourdomain.payments"
APPLE_PAY_DOMAIN_NAME="yourdomain.com"

# Google Pay Configuration  
GOOGLE_PAY_MERCHANT_ID="your_google_merchant_id"
GOOGLE_PAY_MERCHANT_NAME="Kid Party RSVP"

# Security Configuration
NODE_ENV="production"