# Production Environment Template
# Copy this file and rename to .env.local for local production testing
# For actual deployment, set these as environment variables in your hosting platform

# Database (Neon)
DATABASE_URL="postgresql://[username]:[password]@[host]/[database]?sslmode=require"

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET="[generate-32-character-random-string]"

# NextAuth Configuration
NEXTAUTH_URL="https://[your-domain].pages.dev"
NEXTAUTH_SECRET="[generate-32-character-random-string]"

# Base URL
NEXT_PUBLIC_BASE_URL="https://[your-domain].pages.dev"

# CORS Configuration
ALLOWED_ORIGINS="https://[your-domain].pages.dev,https://[custom-domain-if-any]"

# Email Configuration (Gmail)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="[your-gmail-address]"
SMTP_PASS="[gmail-app-password]"
SMTP_FROM="Kid Party RSVP <[your-gmail-address]>"

# Google OAuth (from Google Cloud Console)
GOOGLE_CLIENT_ID="[your-google-oauth-client-id]"
GOOGLE_CLIENT_SECRET="[your-google-oauth-client-secret]"

# Payment Processing (Hyperswitch)
NEXT_PUBLIC_HYPERSWITCH_PUBLISHABLE_KEY="[your-hyperswitch-publishable-key]"
NEXT_PUBLIC_HYPERSWITCH_CLIENT_URL="[your-hyperswitch-client-url]"
HYPERSWITCH_SECRET_KEY="[your-hyperswitch-secret-key]"
HYPERSWITCH_SERVER_URL="[your-hyperswitch-server-url]"