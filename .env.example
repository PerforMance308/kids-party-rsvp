# Database
DATABASE_URL="file:./prisma/dev.db"

# JWT Secret (generate a secure random secret)
JWT_SECRET="your-secure-jwt-secret-here"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587" 
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-gmail-app-password"
SMTP_FROM="Kid Party RSVP <your-email@gmail.com>"

# Base URL (adjust for your deployment)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secure-nextauth-secret"

# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Hyperswitch Payment Configuration (for production)
NEXT_PUBLIC_HYPERSWITCH_PUBLISHABLE_KEY="your-publishable-key"
NEXT_PUBLIC_HYPERSWITCH_CLIENT_URL="your-client-url"
HYPERSWITCH_SECRET_KEY="your-secret-key"
HYPERSWITCH_SERVER_URL="your-server-url"