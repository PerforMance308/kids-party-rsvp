// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Note: SQLite doesn't support enums, using strings with validation

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String?   @map("password_hash") // Optional for OAuth users
  name          String?
  image         String?
  emailVerified DateTime? @map("email_verified")
  createdAt     DateTime  @default(now()) @map("created_at")
  
  parties       Party[]
  guests        Guest[]   // RSVPs to other parties
  accounts      Account[]
  sessions      Session[]
  contacts      Contact[]
  
  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Party {
  id               String    @id @default(uuid())
  userId           String    @map("user_id")
  childName        String    @map("child_name")
  childAge         Int       @map("child_age")
  eventDatetime    DateTime  @map("event_datetime")
  location         String
  theme            String?
  notes            String?
  publicRsvpToken  String    @unique @map("public_rsvp_token") @default(uuid())
  createdAt        DateTime  @default(now()) @map("created_at")
  
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  guests           Guest[]
  reminders        Reminder[]
  
  @@map("parties")
}

model Guest {
  id           String   @id @default(uuid())
  partyId      String   @map("party_id")
  userId       String?  @map("user_id") // Optional for backward compatibility
  parentName   String   @map("parent_name")
  childName    String   @map("child_name")
  email        String
  phone        String?
  createdAt    DateTime @default(now()) @map("created_at")
  
  party        Party    @relation(fields: [partyId], references: [id], onDelete: Cascade)
  user         User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  rsvp         RSVP?
  
  @@map("guests")
}

model RSVP {
  id             String     @id @default(uuid())
  guestId        String     @unique @map("guest_id")
  status         String      // "YES" | "NO" | "MAYBE"
  numChildren    Int        @map("num_children")
  parentStaying  Boolean    @map("parent_staying")
  allergies      String?
  message        String?
  updatedAt      DateTime   @updatedAt @map("updated_at")
  
  guest          Guest      @relation(fields: [guestId], references: [id], onDelete: Cascade)
  
  @@map("rsvps")
}

model Reminder {
  id      String        @id @default(uuid())
  partyId String        @map("party_id")
  type    String        // "SEVEN_DAYS" | "TWO_DAYS" | "SAME_DAY"
  sentAt  DateTime?     @map("sent_at")
  
  party   Party         @relation(fields: [partyId], references: [id], onDelete: Cascade)
  
  @@map("reminders")
}

model Contact {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  name      String
  childName String?  @map("child_name")
  email     String
  phone     String?
  source    String?  // e.g., "RSVP", "MANUAL"
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, email])
  @@map("contacts")
}