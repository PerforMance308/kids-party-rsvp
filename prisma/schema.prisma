generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String              @id @default(uuid())
  email              String              @unique
  passwordHash       String?             @map("password_hash")
  name               String?
  image              String?
  emailVerified      DateTime?           @map("email_verified")
  language           String              @default("zh")
  createdAt          DateTime            @default(now()) @map("created_at")
  accounts           Account[]
  children           Child[]
  contacts           Contact[]
  emailNotifications EmailNotification[]
  guests             Guest[]
  parties            Party[]
  photos             Photo[]
  sessions           Session[]

  @@index([email])
  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Child {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  name      String
  birthDate DateTime @map("birth_date")
  allergies String?
  notes     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  guests    Guest[]
  parties   Party[]

  @@map("children")
}

model Party {
  id                    String     @id @default(uuid())
  userId                String     @map("user_id")
  childId               String     @map("child_id")
  eventDatetime         DateTime   @map("event_datetime")
  location              String
  theme                 String?
  notes                 String?
  template              String     @default("free")
  paidTemplates         String[]   @default([]) @map("paid_templates")
  publicRsvpToken       String     @unique @default(uuid()) @map("public_rsvp_token")
  photoSharingPaid      Boolean    @default(false) @map("photo_sharing_paid")
  allowPhotoSharing     Boolean    @default(false) @map("allow_photo_sharing")
  guestCanSeeOthers     Boolean    @default(false) @map("guest_can_see_others")
  targetAge             Int?       @map("target_age")
  photoSharingPaymentId String?    @map("photo_sharing_payment_id")
  photoSharingEnabledAt DateTime?  @map("photo_sharing_enabled_at")
  createdAt             DateTime   @default(now()) @map("created_at")
  guests                Guest[]
  child                 Child      @relation(fields: [childId], references: [id], onDelete: Cascade)
  user                  User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  photos                Photo[]
  reminders             Reminder[]

  @@index([userId])
  @@index([eventDatetime])
  @@index([publicRsvpToken])
  @@map("parties")
}

model Guest {
  id         String   @id @default(uuid())
  partyId    String   @map("party_id")
  userId     String?  @map("user_id")
  childId    String?  @map("child_id")
  parentName String   @map("parent_name")
  childName  String   @map("child_name")
  email      String
  phone      String?
  createdAt  DateTime @default(now()) @map("created_at")
  child      Child?   @relation(fields: [childId], references: [id])
  party      Party    @relation(fields: [partyId], references: [id], onDelete: Cascade)
  user       User?    @relation(fields: [userId], references: [id])
  rsvp       RSVP?

  @@unique([partyId, email])
  @@index([partyId])
  @@index([email])
  @@map("guests")
}

model RSVP {
  id            String   @id @default(uuid())
  guestId       String   @unique @map("guest_id")
  status        String
  numChildren   Int      @map("num_children")
  parentStaying Boolean  @map("parent_staying")
  allergies     String?
  message       String?
  updatedAt     DateTime @updatedAt @map("updated_at")
  guest         Guest    @relation(fields: [guestId], references: [id], onDelete: Cascade)

  @@map("rsvps")
}

model Reminder {
  id      String    @id @default(uuid())
  partyId String    @map("party_id")
  type    String
  sentAt  DateTime? @map("sent_at")
  party   Party     @relation(fields: [partyId], references: [id], onDelete: Cascade)

  @@map("reminders")
}

model Contact {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  name      String
  childName String?  @map("child_name")
  email     String
  phone     String?
  source    String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, email])
  @@map("contacts")
}

model Photo {
  id           String   @id @default(uuid())
  partyId      String   @map("party_id")
  uploaderId   String?  @map("uploader_id")
  uploaderName String   @map("uploader_name")
  filename     String
  originalName String   @map("original_name")
  caption      String?
  fileSize     Int      @map("file_size")
  mimeType     String   @map("mime_type")
  uploadedAt   DateTime @default(now()) @map("uploaded_at")
  party        Party    @relation(fields: [partyId], references: [id], onDelete: Cascade)
  uploader     User?    @relation(fields: [uploaderId], references: [id])

  @@map("photos")
}

model EmailNotification {
  id          String    @id @default(uuid())
  userId      String    @map("user_id")
  email       String
  type        String
  subject     String
  content     String
  htmlContent String?   @map("html_content")
  relatedId   String?   @map("related_id")
  sentAt      DateTime? @map("sent_at")
  scheduledAt DateTime? @map("scheduled_at")
  attempts    Int       @default(0)
  status      String    @default("pending")
  error       String?
  createdAt   DateTime  @default(now()) @map("created_at")
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("email_notifications")
}
